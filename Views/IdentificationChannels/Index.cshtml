@model IEnumerable<eLogin.ViewModel.IdentificationChannelVM>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Manage Identification Channels</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Channel)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Token)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.IsEnabled)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DefaultIdentifierEntityId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DefaultIdentifierPropertyId)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.IsDeleted)
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Channel)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Token)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.IsEnabled)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DefaultIdentifierEntityId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DefaultIdentifierPropertyId)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.IsDeleted)
            </td>*@
            <td>
                <a asp-action="Edit" asp-route-Id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-Id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-Id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
