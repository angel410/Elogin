@model eLogin.ViewModel.AssignedProperty

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Property</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateProperty">
            <div asp-valIdation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">
                    @Html.DisplayNameFor(m => m.Name)

                    <input asp-for="Name" class="form-control" />
                </label>
                <span asp-valIdation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValidationRegex" class="control-label">
                    @Html.DisplayNameFor(m => m.ValidationRegex)

                    <input asp-for="ValidationRegex" class="form-control" />
                </label>
                <span asp-valIdation-for="ValidationRegex" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValidationHint" class="control-label">
                    @Html.DisplayNameFor(m => m.ValidationHint)

                    <input asp-for="ValidationHint" class="form-control" />
                </label>

                <span asp-valIdation-for="ValidationHint" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsEncrypted" /> @Html.DisplayNameFor(model => model.IsEncrypted)
                </label>


            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsHashed" /> @Html.DisplayNameFor(model => model.IsHashed)
                </label>
            </div>
            @if (Model.isCustomerRepository)
            {
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="IsUniqueIdentifier" /> @Html.DisplayNameFor(model => model.IsUniqueIdentifier)
                    </label>
                </div>
            }
            else
            {
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" readonly disabled asp-for="IsUniqueIdentifier" /> @Html.DisplayNameFor(model => model.IsUniqueIdentifier)
                    </label>
                </div>
            }

            <div class="form-group">
                <label asp-for="EntityId" class="control-label">
                    @Html.DisplayNameFor(m => m.EntityId)

                    <input asp-for="EntityId" class="form-control" readonly />
                </label>

                <span asp-valIdation-for="EntityId" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
