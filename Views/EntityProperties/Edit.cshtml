@model eLogin.Models.EntityProperty

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>EntityProperty</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-valIdation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">

                <label asp-for="EntityId" class="control-label">
                    @Html.DisplayNameFor(m => m.EntityId)
                    <ejs-dropdownlist id="EntityId" dataSource="@ViewBag.Entities" placeholder="Select an Entity" value="@Model.EntityId">
                        <e-dropdownlist-fields text="Text" value="Value"></e-dropdownlist-fields>
                    </ejs-dropdownlist>
                </label>

                <span asp-valIdation-for="EntityId" class="text-danger"></span>
            </div>
            <div class="form-group">

                <label asp-for="PropertyId" class="control-label">
                    @Html.DisplayNameFor(m => m.PropertyId)
                    <ejs-dropdownlist id="PropertyId" dataSource="@ViewBag.Properties" placeholder="Select a Property" value="@Model.PropertyId">
                        <e-dropdownlist-fields text="Text" value="Value"></e-dropdownlist-fields>
                    </ejs-dropdownlist>



                </label>

                <span asp-valIdation-for="PropertyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
