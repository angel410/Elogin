@model IEnumerable<eLogin.Models.PasswordSettings>

@{
    ViewData["Title"] = "Index";
}

<h1>Password Settings</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PasswordExpirationDays)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PasswordHistoryLimit)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PasswordExpirationDays)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PasswordHistoryLimit)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> @* |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> *@
            </td>
        </tr>
}
    </tbody>
</table>
