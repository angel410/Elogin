@model eLogin.Models.EntityCategory

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>EntityCategory</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-valIdation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">

                <label asp-for="CategoryName" class="control-label">
                    @Html.DisplayNameFor(m => m.CategoryName)

                    <input asp-for="CategoryName" class="form-control" />
                </label>
                <span asp-valIdation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ParentEntityCategoryId" class="control-label">
                    @Html.DisplayNameFor(m => m.ParentEntityCategoryId)
                    <ejs-dropdownlist id="ParentEntityCategoryId" class="form-control" dataSource="@ViewBag.Categories" placeholder="Select an Entity Category" value="@Model.ParentEntityCategoryId">
                        <e-dropdownlist-fields text="Text" value="Value"></e-dropdownlist-fields>
                    </ejs-dropdownlist>

                </label>
             
                <span asp-valIdation-for="ParentEntityCategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
