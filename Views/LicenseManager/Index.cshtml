@model eLogin.Models.License
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1>License Manager</h1>
<p class="text-body">This is a critical process. Make sure you upload a correct and valid license file before proceeding.</p>
@{
    var asyncSettings = new Syncfusion.EJ2.Inputs.UploaderAsyncSettings { SaveUrl = "/LicenseManager/Save", RemoveUrl = "/LicenseManager/Remove" };
}
<ejs-uploader id="uploadFiles" asyncSettings="@asyncSettings" multiple="false" autoUpload="true" success="onUploadSuccess"></ejs-uploader>
<br />
<p class="text-danger">@ViewBag.Error</p>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-valIdation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CustomerName" class="control-label">
                    @Html.DisplayNameFor(m => m.CustomerName)
                    <input asp-for="CustomerName" class="form-control" />


                </label>
            </div>
            <div class="form-group">

                <label asp-for="LicenseType" class="control-label">
                    @Html.DisplayNameFor(m => m.LicenseType)
                    <input asp-for="LicenseType" class="form-control" />


                </label>
            </div>
            <div class="form-group" style="@(Model.LicenseType!="Perpetual" ? "display:block" : "display:none")">

                <label asp-for="ExpiryDate" class="control-label">
                    @Html.DisplayNameFor(m => m.ExpiryDate)
                    <input asp-for="ExpiryDate" class="form-control" />


                </label>
            </div>
            <div class="form-group">

                <label asp-for="MaxChannels" class="control-label">
                    @Html.DisplayNameFor(m => m.MaxChannels)
                    <input asp-for="MaxChannels" class="form-control" />


                </label>

            </div>
            <div class="form-group">

                <label asp-for="MaxUsers" class="control-label">
                    @Html.DisplayNameFor(m => m.MaxUsers)
                    <input asp-for="MaxUsers" class="form-control" />


                </label>

            </div>
           
            <div class="form-group">
                <label asp-for="CustomerRepository" class="control-label">Customer Repository</label>
                <input type="text" asp-for="CustomerRepository" value=@(Model.CustomerRepository? "Yes" : "No") readonly class="form-control" disabled />
            </div>
        </form>
    </div>
</div>
<script>
    function onUploadSuccess(args) {
        if (args.operation === 'upload') {
            window.location.href = '../LicenseManager';
        }
    }
</script>

