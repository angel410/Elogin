@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
}

<h4>@ViewData["Title"]</h4>
<div class="row">
    <div class="col-md-6">
        <form Id="change-password-form" method="post">
            <div asp-valIdation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.OldPassword" class="control-label">
                    @Html.DisplayNameFor(m => m.Input.OldPassword)

                    <input asp-for="Input.OldPassword" class="form-control" />
                </label>
                <span asp-valIdation-for="Input.OldPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.NewPassword" class="control-label">
                    @Html.DisplayNameFor(m => m.Input.NewPassword)

                    <input asp-for="Input.NewPassword" class="form-control" />
                </label>

                <span asp-valIdation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword" class="control-label">
                    @Html.DisplayNameFor(m => m.Input.ConfirmPassword)

                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                </label>
                <span asp-valIdation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Update password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}